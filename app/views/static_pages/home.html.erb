<% provide :title, t(".home_pages") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".micropost_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t(".sample_app") %></h1>
    <p>
      <%= t(".this_is_home_page_for") %> <%= link_to t(".ruby_on_rails_tutorial"), Settings.rails_tutorial %>
    </p>
    <%= link_to t(".sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("railslogo.png", alt: "Rails Logo", id: "img-rails"),
   Settings.ruby_on_rails %>
<% end %>

<%= javascript_pack_tag "custom" %>
