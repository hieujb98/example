<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
  <%= link_to t(".sample_app"), root_path, id: "logo" %>
  <nav>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to t(".home_pages"), Settings.home_pages %></li>
      <li><%= link_to t(".help_pages"), Settings.help_pages %></li>
      <li><%= link_to t(".eng"), locale: Settings.en %></li>
      <li><%= link_to t(".vi"), locale: Settings.vi %></li>
      <% if logged_in? %>
        <li><%= link_to t(".users"), "#" %></li>
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
            <%= current_user.name %>
            <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t(".profile"), current_user %></li>
            <li><%= link_to t(".settings"), "#" %></li>
            <li class="divider"></li>
            <li><%= link_to t(".logout"), logout_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t(".login"), login_path %></li>
      <% end %>
    </ul>
  </nav>
  </div>
</header>
